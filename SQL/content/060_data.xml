	<section id="data_delete">
		<title>Delete</title>
		<table frame='all'>
			<title>Delete</title>
			<tgroup cols='2' align='left' colsep='1' rowsep='1'>
				<colspec colname='c1' />
				<colspec colname='c2' />
				<thead>
					<row>
						<entry>Command</entry>
						<entry>Description</entry>
					</row>
				</thead>
				<tbody>
					<row>
						<entry> DELETE FROM table_name WHERE id='8';</entry>
						<entry> Deletes an entry from table "table_name"which has the id
							8.
							Requires that the table has a column "id".
					</entry>
					</row>
					<row>
						<entry>
							delete from table_name where id <![CDATA[ <> ]]>
							1 and id <![CDATA[ <> ]]>
							29;;
						</entry>
						<entry> Deletes all entries from table "table_name" except the
							entries with the ID "1" and "29". 
					</entry>
					</row>
				</tbody>
			</tgroup>
		</table>
	</section>

